{
  "exclude": ["node_modules", "**/*.spec.ts"],
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": true,
    "module": "es2015",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "target": "es6",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018"]
  }
}
